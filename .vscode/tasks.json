{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile nim file",
            "type": "shell",
            "command": "nim compile --debugger:native --cppDefine:N_LIB_PRIVATE ${file}",
            "problemMatcher": "$nim",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "runFile",
            "type": "shell",
            "command": "nim compile --debugger:native --cppDefine:N_LIB_PRIVATE --run ${file}",
            "problemMatcher": "$nim",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}